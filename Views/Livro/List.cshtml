@model List<WebApp.Models.Dtos.LivroDto>

@{
    ViewData["Title"] = "List";
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <title>Lista de Livros</title>
</head>
<body>
<p>
    <a asp-action="Create">Adicionar livro</a>
</p>
<div>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Editora)
            </th>
            <th></th>
        </tr>
@foreach (var item in Model){
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editora)
        </td>
        @if (User.IsInRole("Administrador"))
        {
        <td>
            @Html.ActionLink("Atualizar", "Edit", new {  id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
        }
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) 
        </td>

    </tr>
}
        </thead>
    </table>
</div>
</body>
</html>